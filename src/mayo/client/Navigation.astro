---
const routes =
//
[
  {
    pathname:
      //
      "/",

    label:
      //
      "Music",

    icon:
      "M400-120q-66 0-113-47t-47-113q0-66 47-113t113-47q23 0 42.5 5.5T480-418v-422h240v160H560v400q0 66-47 113t-113 47Z",
  },

  {
    pathname:
      //
      "/downloads",

    label:
      //
      "Downloads",

    icon:
      //
      "M480-320 280-520l56-58 104 104v-326h80v326l104-104 56 58-200 200ZM240-160q-33 0-56.5-23.5T160-240v-120h80v120h480v-120h80v120q0 33-23.5 56.5T720-160H240Z",
  },
];
---

<nav class="w-full h-15 flex">
  <ul class="flex items-center gap-2">
    {
      routes.map(route => (
        <li>
          <a
            class={`px-3 py-2 flex justify-center items-center gap-1 rounded-full select-none ${
              Astro.url.pathname === route.pathname
                //
                ? "bg-zinc-600 cursor-auto pointer-events-none"
                //
                : "bg-zinc-900 transition hover:bg-zinc-800 active:bg-zinc-700"
            }`}

            href={route.pathname}
          >
            <svg
              class="w-4 h-4 fill-zinc-300"

              viewBox="0 -960 960 960"
            >
              <path d={route.icon} />
            </svg>

            {route.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
